<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Notes_LayoutId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_menu"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_gravity="center"
                android:contentDescription="@string/search" />
            <EditText
                android:id="@+id/Notes_SearchID"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/TimKiem"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:minLines="1"
                android:autofillHints=""
                android:inputType="text" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/TagLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_filter_alt_24"/>
                <TextView
                    android:layout_marginStart="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc nhãn: "
                    android:textColor="@color/black"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/TagNameFill"
                    android:background="@drawable/shape_tag"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Tất cả"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/NOTFOUND_MAIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="50dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_browser_not_supported_60"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:text="Không tìm thấy ghi chú"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/NOTHING_MAIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="50dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_browser_not_supported_60"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:text="Hiện không có ghi chú mới"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/Notes_List"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/white2"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:divider="@null"
                android:footerDividersEnabled="false"
                android:dividerHeight="0dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/NoteAddId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#39cbe4"
                app:tint="@android:color/white"
                android:layout_margin="36dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_baseline_add_24"
                app:fabCustomSize="74dp"
                app:maxImageSize="46dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:contentDescription="@string/add" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/BOTTOM_layout"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:background="@color/white"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:visibility="gone"
                android:scrollbars="horizontal">
                <LinearLayout
                    android:id="@+id/DeleteNotes"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp">
                    <ImageView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_delete_24"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Xóa"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/PassNotes"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp">
                    <ImageView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_lock_main_24"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/PinNotes"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp">
                    <ImageView
                        android:id="@+id/MainPin"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_vertical_align_top_24"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Ghim"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/UnPinNotes"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:visibility="visible">
                    <ImageView
                        android:id="@+id/UnMainPin"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_vertical_align_bottom_24"/>
                    <TextView
                        android:clickable="false"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bỏ Ghim"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NotesTag"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:visibility="visible">
                    <ImageView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_bookmark_add_24"/>
                    <TextView
                        android:clickable="false"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gán nhãn"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NotesUnTag"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:visibility="visible">
                    <ImageView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_bookmark_remove_24"/>
                    <TextView
                        android:clickable="false"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xóa nhãn"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ShareNotes"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:visibility="visible">
                    <ImageView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_share_24"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Chia sẽ"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/reminderNotes"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:visibility="visible">
                    <ImageView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_timer_24"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Nhắc nhở"/>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>