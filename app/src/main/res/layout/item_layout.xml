<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Linear_Item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="1"
    android:clickable="true"
    android:baselineAligned="false"
    android:focusable="true"
    android:background="@drawable/shape"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        tools:ignore="UseCompoundDrawables"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        >
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="Tiêu đề"
            android:textStyle="bold"
            android:clickable="false"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/Tv_Sentence"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/black"
            tools:text="Nội dung"
            android:clickable="false"
            android:maxLines="1"
            android:textSize="16sp"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="Thời gian"
                android:clickable="false"
                android:textSize="13sp"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/NotesPinIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_vertical_align_top_18"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/NotesPassIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_item_lock_24"/>
            <ImageView
                android:id="@+id/Notes_Notifications_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_timer_18"
                android:visibility="gone"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ItemsTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_label_18"
                android:layout_marginEnd="3dp"
                android:layout_gravity="top"/>
            <TextView
                android:id="@+id/ItemTagValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tag"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:visibility="visible"
        android:id="@+id/checkman"
        android:backgroundTint="@color/white"

        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/custom_checkbox"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:text=""
        android:layout_gravity="center" />

</LinearLayout>
